using System;

class MainClass
{
    public static string FirstReverse(string str)
    {
        char[] shit = str.ToCharArray();
        string reverse=String.Empty;
        for (int i = shit.Length-1; i>-1; i--)
        {
            reverse += shit[i];
        }

        // code goes here  
        /* Note: In C# the return type of a function and the 
           parameter types being passed are defined, so this return 
           call must match the return type of the function.
           You are free to modify the return type. */

        return reverse;

    }

    static void Main()
    {
        // keep this function call here
        
        Console.WriteLine("Hello, I will reverse Your string, no problem. Type it already");
        string what = Console.ReadLine();
        Console.WriteLine("Take that \n {0}",FirstReverse(what));
        Console.ReadLine();
    }

}

