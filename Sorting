using System;
using System.Collections.Generic;

namespace MyProject_for_sorting
{
    class Program
    {
        static void Main(string[] args)
        {
            {

                String input;
                int inputList, i = 1;
                List<int> user_Inputs = new List<int>();

                while ((input = Console.ReadLine()).Length > 0)
                    if (int.TryParse(input, out inputList)) user_Inputs.Add(inputList);

                Console.WriteLine("Numbers entered: ");
                if (user_Inputs.Count == 0) return;

                foreach (int n in user_Inputs)
                    Console.WriteLine("Number" + i++ + ": " + n);

                Console.ReadKey();
                user_Inputs.Sort();
                Console.WriteLine("List in sorted order");
                foreach (int data in user_Inputs)

                    Console.Write("    {0}", data);
                    Console.WriteLine();
                Console.ReadLine();


                
            }

        }
    }
}
